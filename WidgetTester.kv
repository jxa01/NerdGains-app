<ExerciseExplorer>:
	canvas.before:
		Color:
			rgba: app.Colors['background']
		Rectangle:
			pos: self.pos
			size: self.size
						
	BoxLayout:
		orientation: 'vertical'
		spacing: 20
		#page title
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'top'
			size_hint_y: None
			height: app.Sizes['title_line']
			MyLabel:
				text: "[b]Exercise Explorer[/b]"
				size_hint_y: None
				height: app.Sizes['title_line']
				markup: True
				font_size: app.Sizes['title_font']
				padding: 20
				canvas.before:
					Color:
						rgba: app.Colors['primary']
					Rectangle:
						pos: self.pos
						size: self.size
				
		#create new exercise button
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'top'
			size_hint_y: None
			height: app.Sizes['normal_line']
			MyButton:
				text: "Create New Exercise"
				size_hint: (0.8, None)
				height: app.Sizes['normal_line']
						
		#list of exercises to view						
		RecycleView:
			viewclass: 'Label'
			data: root.data
			RecycleBoxLayout:
				orientation: 'vertical'
				spacing: 20
				padding: 10
				size_hint_y: None
				height: self.minimum_height
				default_size: None, None
				default_size_hint: 1, None
				
				
		#bottom nav bar
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'top'
			size_hint_y: None
			height: app.Sizes['normal_line']				
			MyButton:
				text: "navigation"
				size_hint: (0.8, None)
				height: app.Sizes['normal_line']
			
